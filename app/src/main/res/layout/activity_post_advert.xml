<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="h1691712.kijiji.Post_advert"
    android:background="@drawable/postanad">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Description"
        android:id="@+id/editText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/editText"
        android:layout_alignParentStart="true"
        android:hint="Ad Title"
        android:id="@+id/editText2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:hint="Price(CAD)"
        android:inputType="number"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="gotomykijiji"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:weightSum="5">
        <ImageView
            android:id="@+id/Homebutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="click1"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/Homebutton"
            android:layout_toEndOf="@+id/Homebutton"
            android:layout_marginStart="25dp"
            android:onClick="click2"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/Homebutton"
            android:layout_toEndOf="@+id/Homebutton"
            android:layout_marginStart="25dp"

            android:layout_weight="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/Homebutton"
            android:layout_toEndOf="@+id/Homebutton"
            android:layout_marginStart="25dp"
            android:onClick="click4"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/Homebutton"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/Homebutton"

            android:onClick="click5"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
